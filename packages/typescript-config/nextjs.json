{
      "$schema": "https://json.schemastore.org/tsconfig",
      "display": "Next.js",
      "extends": "./base.json",
      "compilerOptions": {
            "lib": [
                  "ESNext",
                  "DOM",
                  "DOM.Iterable"
            ],
            "plugins": [
                  {
                        "name": "next"
                  }
            ],
            "module": "ESNext",
            "moduleResolution": "Bundler",
            "allowJs": true,
            "jsx": "preserve",
            "noEmit": true
      }
}
